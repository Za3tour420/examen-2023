{% extends 'layout.twig' %}

{% block head %}
  <link rel="stylesheet" href="/css/contacts.css">
  <header>
  </header>
{% endblock %}

{% block body %}
    
  <div class="table-container">
    <h2>{{title}}</h2>
    <table class="contact-table" id="contactTable">
      <thead>
        <tr>
          <th>Pseudo</th>
          <th>Content</th>
          <th>Likes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% if messages is defined and messages|length > 0 %}
          {% for message in messages %}
            <tr>
              <td>{{ message.Pseudo }}</td>
              <td>{{ message.Content }}</td>
              <td>{{ message.Likes }}</td>
              <td>
                <a href="/messages/like/{{message.id}}">Like</a>
                <a href="/messages/update/{{message.id}}" class="btn-update">Update</a>
                <a href="/messages/delete/{{message.id}}" class="btn-delete" onclick="return confirm('Are you sure you want to delete this message?')">Delete</a>
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td colspan="4">No messages found</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
{% endblock %}
